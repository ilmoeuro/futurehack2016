<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ilmoeuro.futurehack2016.MainGUIController">
    <stylesheets>
        <URL value="@/styles/maingui.css" />
    </stylesheets>
   <children>
      <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="NEVER" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.rowIndex="1">
              <tabs>
                <Tab text="Realtime">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <LineChart fx:id="realtimeData" animated="false" createSymbols="false" layoutX="14.0" layoutY="60.0" legendSide="TOP" prefHeight="227.0" prefWidth="580.0" title="Realtime accelerometer data" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0">
                                <xAxis>
                                  <NumberAxis animated="false" autoRanging="false" forceZeroInRange="false" side="BOTTOM" tickUnit="1000.0" upperBound="10000.0" fx:id="xAxis" />
                                </xAxis>
                                <yAxis>
                                  <NumberAxis animated="false" autoRanging="false" forceZeroInRange="false" lowerBound="-100.0" minorTickCount="10" minorTickVisible="false" side="LEFT" tickLabelGap="10.0" tickMarkVisible="false" tickUnit="25.0" />
                                </yAxis>
                              </LineChart>
                              <Label fx:id="statusField" layoutX="14.0" layoutY="298.0" prefHeight="15.0" prefWidth="574.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" />
                              <Label fx:id="notice" alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="45.0" prefWidth="569.0" textAlignment="CENTER" textFill="RED">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="History">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
                </Tab>
              </tabs>
            </TabPane>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="serialPortField" promptText="USB port">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="connectButton" mnemonicParsing="false" text="Connect">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="disconnectButton" mnemonicParsing="false" text="Disconnect">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
